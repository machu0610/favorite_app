<%#= render 'errors', recipe: @recipe %>
<% if @recipe.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h4 class="alert-heading"><%= pluralize(@recipe.errors.count, "error") %></h4><%#pluralizeヘルパーは英語専用のテキストヘルパー%>
    <%#pluralizeヘルパーは、最初の引数に整数があると、それに基づいて二番目の引数である英単語が複数形に変化したものが渡される%>
    <p><%= pluralize(@recipe.errors.count, "error") %> prohibited this object from being saved: not successfully</p>
    <hr>
    <p class="mb-0">
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </p>
  </div>
<% end %>

<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>新規投稿</h2>
        <%#= render 'form', recipe: @recipe %>
      <%= form_for @recipe do |f| %>
        <div class="form-group">
          <label>レシピ名</label>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <label>作り方</label>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <div>
          <%= f.submit class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>